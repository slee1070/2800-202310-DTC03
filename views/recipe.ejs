  </style>
  <h1 class="center">Recipes</h1>

  <!-- Filter buttons -->
  <div class="center container">
    <label>
      <input type="checkbox" name="keywords" id="europeanCheckbox" value="European" onchange="filterRecipes()" <% if
        (userCuisinePreference.includes('European')) { %>checked<% } %>>
        European
    </label>
    <label>
      <input type="checkbox" name="keywords" id="mexicanCheckbox" value="Mexican" onchange="filterRecipes()" <% if
        (userCuisinePreference.includes('Mexican')) { %>checked<% } %>>
        Mexican
    </label>
    <label>
      <input type="checkbox" name="keywords" id="koreanCheckbox" value="Korean" onchange="filterRecipes()" <% if
        (userCuisinePreference.includes('Korean')) { %>checked<% } %>>
        Korean
    </label>
    <label>
      <input type="checkbox" name="keywords" id="chineseCheckbox" value="Chinese" onchange="filterRecipes()" <% if
        (userCuisinePreference.includes('Chinese')) { %>checked<% } %>>
        Chinese
    </label>
    <label>
      <input type="checkbox" name="keywords" id="japaneseCheckbox" value="Japanese" onchange="filterRecipes()" <% if
        (userCuisinePreference.includes('Japanese')) { %>checked<% } %>>
        Japanese
    </label>
    <label>
      <input type="checkbox" name="keywords" id="indianCheckbox" value="Indian" onchange="filterRecipes()" <% if
        (userCuisinePreference.includes('Indian')) { %>checked<% } %>>
        Indian
    </label>
    <label>
      <input type="checkbox" name="keywords" id="greekCheckbox" value="Greek" onchange="filterRecipes()" <% if
        (userCuisinePreference.includes('Greek')) { %>checked<% } %>>
        Greek
    </label>
    <label>
      <input type="checkbox" name="keywords" id="brazilianCheckbox" value="Brazilian" onchange="filterRecipes()" <% if
        (userCuisinePreference.includes('Brazilian')) { %>checked<% } %>>
        Brazilian
    </label>
    <label>
      <input type="checkbox" name="keywords" id="thaiCheckbox" value="Thai" onchange="filterRecipes()" <% if
        (userCuisinePreference.includes('Thai')) { %>checked<% } %>>
        Thai
    </label>


    <div id="recipeCards container">
      <% for (let recipe of recipes) { %>
        <div class="card" data-keywords="<%= recipe.Keywords %>">
          <% if (recipe.Images) { %>
            <% const images=recipe.Images.split(', ');
                    const firstImage = images[0].replace(/"/g, '').replace(/^c\(/, '');%>
    <div class="recipe-card">
      <div class="recipe-image-container">
        <img src="<%= firstImage %>" alt="<%= recipe.Name %>" class="recipe-image">
      </div>
      <br>
      <h2 class="center"><%= recipe.Name %></h2>
      <!-- Button that triggers the modal -->
      <button class="more-button btn btn-lg btn-warning mt-3" onclick="document.querySelector(' #modal-<%=recipe._id %>').style.display='block'">More</button>
        </div>
        <% } %>

          <!-- Modal that displays the ingredients and instructions -->
          <div id="modal-<%= recipe._id %>" class="modal">
            <div class="modal-content">
              <span class="close"
                onclick="document.getElementById('modal-<%= recipe._id %>').style.display='none'">&times;</span>
              <h2>
                <%= recipe.Name %>
              </h2>
              <p><strong>Ingredients:</strong></p>
              <ul>
                <% const ingredients=recipe.RecipeIngredientParts.split(', ');
        for (let i = 0; i < ingredients.length; i++) {
            let ingredient = ingredients[i].replace(/"/g, '');
            if (i === 0) {
            // Remove the "c(" prefix from the first ingredient
                ingredient = ingredient.replace(/^c\(/, '');
            }
            if (i === ingredients.length - 1) {
            // Remove the ")" from the last ingredient
                ingredient = ingredient.replace(/\)$/, '');
            }
            %>
            <li><%= ingredient %></li>
            <% } %>
            </ul>
            <p><strong>Instructions:</strong></p>
            <ol>
            <% const instructions = recipe.RecipeInstructions.replace(/\\n/g, '').replace(/^c\(/, '').replace(/\)$/, '').split(/", "/);
            for (let i = 0; i < instructions.length; i++) {
                let instruction = instructions[i].replace(/" /g, ''); %>
            <li><%= instruction %></li>
            <% } %>
            </ol>
        </div>
        </div>
    </div>
<% } %>
</div>
<br>
<div class="pagination">
  <% if (currentPage> 1) { %>
    <a href="/recipe?page=<%= currentPage - 1 %>" class="btn btn-warning page ml-1 numberedButtons">Prev</a>
    <% } %>

      <% const startPage=Math.max(1, currentPage - 2); const endPage=Math.min(totalPages, startPage + 4); for (let
        i=startPage; i <=endPage; i++) { %>
        <% if (i===currentPage) { %>
          <button class="btn btn-warning page ml-1 numberedButtons active" value="<%= i %>">
            <%= i %>
          </button>
          <% } else { %>
            <a href="/recipe?page=<%= i %>" class="btn btn-warning page ml-1 numberedButtons" value="<%= i %>">
              <%= i %>
            </a>
            <% } %>
              <% } %>

                <% if (currentPage < totalPages) { %>
                  <a href="/recipe?page=<%= currentPage + 1 %>" class="btn btn-warning page ml-1 numberedButtons">Next</a>
                  <% } %>
</div>


</div>
<script src="js/recipe2.js"></script>
<%- include("templates/footer") %>