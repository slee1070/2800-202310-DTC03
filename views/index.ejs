<%- include("templates/header") %>
<div class="container text-center">
  <br>
  <br>
  <img src="/images/logo.png" alt="Logo" width="200px">
<% if (!session.GLOBAL_AUTHENTICATED) { %>
    <br>
    <br>
    <button type="button" class="mt-3 w-100 btn btn-lg btn-warning" onclick="location.href='/signup';">Sign up</button>
    <br>
    <button type="button" class="mt-3 w-100 btn btn-lg btn-warning" onclick="location.href='/login';">Log in</button>
  <% } else { %>
    <br>
    <br>
    <h2>Hello, <%= session.loggedUsername %>!</h2>
    <br>
    <button type="button" class="mt-3 w-100 btn btn-lg btn-warning" onclick="location.href='/chat';">Start Chat</button>
    <br>
    <button type="button" class="mt-3 w-100 btn btn-lg btn-warning" onclick="location.href='/my_pantry';">Edit My Pantry</button>
    <br>
    <button type="button" class="mt-3 w-100 btn btn-lg btn-warning" onclick="location.href='/logout';">Logout</button>
  <% } %>
</div>
<%- include("templates/footer") %>




